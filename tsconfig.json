{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "outDir": "./dist",
    "inlineSources": true
  },
  "files": [
    "src/models/meta-config.ts",
    "src/meta.service.ts",
    "src/meta.module.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "typings"
  ]
}
