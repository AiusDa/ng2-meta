{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "declaration": true,
    "outDir": "./dist",
    "inlineSources": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "core-js"
    ]
  },
  "files": [
    "typings/index.d.ts",
    "src/meta.service.ts",
    "src/meta.module.ts",
    "src/models/meta-config.ts",
    "src/index.ts",
    "src/meta.service.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
